---
import { CURIO_TYPE_TO_DESC } from '@/libs/du/curio-utils'
import type { Curio, CurioType } from '@/libs/du/types'
import clsx from 'clsx'
import CurioCard from '../CurioCard/index.astro'

interface Props {
  type: CurioType
  curios: Curio[]
}

const { curios, type } = Astro.props
---

<div class="my-6">
  <div class="text-2xl font-bold text-center my-4">
    {CURIO_TYPE_TO_DESC[type]}
  </div>
  <div
    class={clsx(
      'grid',
      'grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-6',
      'gap-2',
    )}
  >
      {curios.map((blessing) => <CurioCard curio={blessing} />)}
  </div>
</div>
